<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffff"

    >

    <TextView
        android:id="@+id/confirmed_books_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/source_sans_pro"
        android:layout_marginTop="50dp"
        android:textColor="#4c84ff"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="YOUR SCHEDULES"
        />
    <TextView
        android:id="@+id/pending_books_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/source_sans_pro"
        android:textColor="#4c84ff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="CONFIRMED SCHEDULES"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/confirmed_books_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/source_sans_pro"
        android:textColor="#4c84ff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="PENDING SCHEDULES"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pending_books_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        />


</LinearLayout>
</ScrollView>