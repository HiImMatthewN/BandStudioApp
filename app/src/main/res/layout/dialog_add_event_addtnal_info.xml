<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <DatePicker

                    android:id="@+id/add_event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_below="@+id/add_event_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner" />

                <TimePicker
                    android:id="@+id/add_event_time"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_below="@+id/add_event_date"
                    android:layout_centerHorizontal="true"
                    android:timePickerMode="spinner" />

                <EditText
                    android:id="@+id/add_event_price"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/add_event_time"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/edittext_dropshadow_full"
                    android:hint="â‚±"
                    android:padding="5dp" />


                <EditText
                    android:id="@+id/add_production_name"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/add_event_price"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_dropshadow_full"
                    android:hint="Production Name"
                    android:padding="5dp" />

                <Button
                    android:id="@+id/save_event_button"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/add_production_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:background="#4c84ff"
                    android:fontFamily="@font/source_sans_pro"
                    android:text="ADD"
                    android:textStyle="bold" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>